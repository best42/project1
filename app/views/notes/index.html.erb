<div class="container">
  <div class="center">
    <img src="/assets/images/lect.jpg" class="responsive-img" style="max-height: 100px;"/>
  </div>

  <p id="notice"><%= notice %></p>

  <h1>Listing Notes</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Subject</th>
        <th>Teacher</th>
        <th>Rating</th>
        <th>Owner</th>
        <th>Create note</th>
        <th>Image note</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @notes.each do |note| %>
        <tr>
          <td><%= note.title %></td>
          <td><%= note.description %></td>
          <td><%= note.subject %></td>
          <td><%= note.teacher %></td>
          <td><%= note.rating %></td>
          <td><%= note.owner %></td>
          <td><%= note.create_note %></td>
          <td><%= note.image_note %></td>
          <td><%= link_to 'Show', note %></td>
          <td><%= link_to 'Edit', edit_note_path(note) %></td>
          <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

<%= link_to 'New Note', new_note_path %>
